package med.infographic {	import flash.geom.ColorTransform;	public class Pick3Bar extends _Pick3Bar {				public var id:String;		public var text:String;		public var value:Number;				public function get barWidth():Number { return bg.width; }		public function set barWidth(value:Number):void { bg.width = value; }				protected var ct:ColorTransform;		public function Pick3Bar(id:String, text:String, value:Number, ct:ColorTransform) {			this.id = id;			this.text = text;			this.value = value;			this.ct = ct;			bg.transform.colorTransform = ct;			textField.text = text || "";						textMask.visible = false;			textField.mask = textMask;					}							}}