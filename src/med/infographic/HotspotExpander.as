package med.infographic {	import com.greensock.easing.Quad;	import com.greensock.plugins.ColorTransformPlugin;	import com.greensock.plugins.TweenPlugin;	import com.greensock.TweenMax;	public class HotspotExpander extends _HotspotExpander {				public var expanded:Boolean;		public var canToggle:Boolean;				public function HotspotExpander(text:String, imageURL:String) {			textField.visible = false;			textBG.visible = false;						mouseChildren = false;						expanded = false;			canToggle = true;		}						public function toggle():void {			expanded = !expanded;			//canToggle = false;			var t:Number = 0;			const BUTTON_CHANGE_TIME:Number = 0.7;			if (expanded) {				TweenMax.to(bg, BUTTON_CHANGE_TIME, { delay:t, colorTransform:{ tint:0x76b82a, tintAmount:1.0 }, ease:Quad.easeOut } );				TweenMax.to(verticalLine, BUTTON_CHANGE_TIME, { delay:t, scaleY:0, alpha:0, ease:Quad.easeOut } );				TweenMax.to(horizontalLine, BUTTON_CHANGE_TIME, { delay:t, scaleX:1.1, scaleY:1.1, colorTransform:{ tint:0xFFFFFF, tintAmount:1.0 }, ease:Quad.easeOut } );			} else {				TweenMax.to(bg, BUTTON_CHANGE_TIME, { delay:t, colorTransform:{ tint:0xFFFFFF, tintAmount:0 }, ease:Quad.easeOut } );				TweenMax.to(verticalLine, BUTTON_CHANGE_TIME, {delay:t, scaleY:1, alpha:1, ease:Quad.easeOut } );				TweenMax.to(horizontalLine, BUTTON_CHANGE_TIME, { delay:t, scaleX:1, scaleY:1, colorTransform:{ tint:0x76b82a, tintAmount:0 }, ease:Quad.easeOut } );			}		}			}}