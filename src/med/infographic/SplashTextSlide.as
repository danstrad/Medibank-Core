package med.infographic {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	public class SplashTextSlide extends Sprite implements ISlide {				protected var textField:TextField;				public function SplashTextSlide(slideData:InfographicSlideData, initialBackgroundColor:uint) {			var xml:XML = slideData.xml;						if (xml.hasOwnProperty("text")) {				textField = new TextField();				textField.mouseEnabled = false;				textField.width = 1;				textField.height = 1;				textField.defaultTextFormat = TextUtils.infographicSplashFormat;				textField.autoSize = TextFieldAutoSize.LEFT;				textField.textColor = 0xFFFFFF;								var text:String = xml.text[0].toString();				textField.text = text;				textField.width = Math.min(textField.width, 1024);				textField.x = -textField.width / 2;				textField.y = -textField.height / 2;			}		}				public function animateOn():void {			if (textField) {				addChild(textField);			}		}		public function animateOff(callback:Function):void {					}	}}