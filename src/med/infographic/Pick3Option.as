package med.infographic {	import flash.geom.ColorTransform;	public class Pick3Option extends _Pick3Option {				public var id:String;		public var text:String;				protected var ct:ColorTransform;		protected var selectedCT:ColorTransform;		protected var _selected:Boolean;		public function get selected():Boolean { return _selected; }				public function set selected(value:Boolean):void {						_selected = value;			if (_selected) bg.transform.colorTransform = selectedCT;			else bg.transform.colorTransform = ct;		}				public function Pick3Option(id:String, text:String, ct:ColorTransform, selectedCT:ColorTransform) {			this.selectedCT = selectedCT;			this.ct = ct;			this.text = text;			this.id = id;			bg.transform.colorTransform = ct;			textField.text = text || "";						mouseChildren = false;		}					}}